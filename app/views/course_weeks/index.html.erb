<div class="row" id="inner-header">
  <div class='span6 sub-header'>
    <h2>
      Course-week Selection
    </h2>
  </div>
  <div class='span6 sub-header'>
    <div class='header-actions'>
      <%= link_to year_path(@year), :class => "btn btn-danger" do %>
        <i class='icon-chevron-left'></i> Back to <%= @year.no %>
      <% end %>
    </div>
  </div>
</div>

<hr>

<% if @courses.empty? %>
  <div class="alert alert-block">
    No courses found.
  </div>
<% else %>
  <%= form_tag update_course_weeks_path(@year), :method => :put do %>
    <%= render :partial => 'course', :collection => @courses.has_lecturers, :as => :course %>

    <div class='form-actions'>
      <%= submit_tag "Submit", :class => "btn btn-primary" %>
      <%= link_to "Cancel", year_path(@year), :class => "btn btn-danger" %>
    </div>
  <% end %>
<% end %>
