<tr class="tutorial-hours">
  <td>
    Tutorial hours
  </td>
  <% @terms.each do |t| %>
    <% if course.taught_in_term?(t) %>
      <% t.weeks.each do |w| %>
        <td>
          <%= text_field_tag "course_weeks[#{course.code}][tutorials][#{t.no}][#{w.no}]", find_existing_hours(@course_weeks, course, w, nil, "Tutorial"), :class => "tiny term-#{t.no} tutorial", :id => "#{t.no}-#{w.no}-tutorial" %>
        </td>
      <% end %>
      <td></td>
    <% end %>
  <% end %>
</tr>
