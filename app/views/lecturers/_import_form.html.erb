<%= form_tag(import_year_lecturers_path(@year), :multipart => true, :class => "form-horizontal") do %>
  <h3>
    Import Lecturers
  </h3>

  <% if @year.lecture_courses.empty? || @year.staff_members.empty? %>
    <div class="alert alert-error">
      You have not yet provided enough data to import this.
    </div>
  <% else %>
    <div class='control-group'>
      <div class='controls'>
        <%= file_field_tag "file" %>
      </div>
    </div>

    <div class='form-actions'>
      <%= submit_tag "Upload", :class => 'btn btn-primary' %>
    </div>
  <% end %>
<% end %>
