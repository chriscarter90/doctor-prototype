<div class="row" id='staff-header'>
  <div class='span6 sub-header'>
    <h2>
      Staff Members
    </h2>
  </div>
  <div class='span6 sub-header'>
    <div class='actions'>
      <%= link_to year_path(@year), :class => "btn btn-danger" do %>
        <I class='icon-chevron-left'></i> Back to <%= @year.no %>
      <% end %>
    </div>
  </div>
</div>

<hr>

<% if @staff.empty? %>
  <div class="alert alert-block">
    No staff to show.
  </div>
<% else %>
  <ul class='nav nav-pills nav-stacked'>
    <% @staff.each do |s| %>
      <li>
        <%= link_to "#{s.login} - #{s.full_name}", year_staff_member_path(@year, s) %>
      </li>
    <% end %>
  </ul>
<% end %>
