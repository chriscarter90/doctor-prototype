<h1>
  <%= @staff_member.login %> - <%= @staff_member.full_name %>
</h1>

<% if @lecturers.empty? %>
  <h3>
    There are no courses for this staff member.
  </h3>
<% else %>
  <h3>
    Courses:
  </h3>
  <% @lecturers.group_by(&:role).each do |role, staff| %>
    <h4>
      <%= role %>
    </h4>
    <ul class='nav nav-pills nav-stacked'>
      <% staff.each do |s| %>
        <li>
          <%= link_to "#{s.lecture_course.code} - #{s.lecture_course.title}", year_lecture_course_path(@year, s.lecture_course) %>
        </li>
      <% end %>
    </ul>
  <% end %>
<% end %>
