<div class="row" id='room-header'>
  <div class='span6 sub-header'>
    <h2>
      Rooms
    </h2>
  </div>
  <div class='span6 sub-header'>
    <div class='actions'>
      <%= link_to "Create Room", new_year_room_path(@year), :class => "btn btn-primary" %>
      <%= link_to year_path(@year), :class => "btn btn-danger" do %>
        <I class='icon-chevron-left'></i> Back to <%= @year.no %>
      <% end %>
    </div>
  </div>
</div>

<hr>

<% if @rooms.empty? %>
  <div class="alert alert-block">
    No rooms to show.
  </div>
<% else %>
  <table class="table table-striped">
    <tr>
      <th>
        Room
      </th>
      <th>
        Capacity
      </th>
      <th> </th>
    </tr>

    <% @rooms.each do |r| %>
      <tr>
        <td>
          <%= r.no %>
        </td>
        <td>
          <%= r.capacity %>
        </td>
        <td>
          <%= link_to "Edit", edit_year_room_path(@year, r), :class => "btn btn-primary" %>
          <%= link_to "Delete", year_room_path(@year, r), :method => :delete, :data => { :confirm => "Are you sure you wish to delete this room?" }, :class => "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </table>
<% end %>
