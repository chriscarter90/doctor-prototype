<h1>Rooms</h1>

<% if @rooms.empty? %>
  <h4>No rooms to show.</h4>
<% else %>
  <table class="table table-striped">
    <tr>
      <th>
        Room
      </th>
      <th>
        Capacity
      </th>
      <th> </th>
    </tr>

    <% @rooms.each do |r| %>
      <tr>
        <td>
          <%= r.no %>
        </td>
        <td>
          <%= r.capacity %>
        </td>
        <td>
          <%= link_to "Edit", edit_room_path(r), :class => "btn btn-primary" %>
          <%= link_to "Delete", room_path(r), :method => :delete, :data => { :confirm => "Are you sure you wish to delete this room?" }, :class => "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </table>
<% end %>

<%= link_to "Create Room", new_room_path, :class => "btn btn-primary" %>
