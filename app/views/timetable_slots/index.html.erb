<div class="row" id='inner-header'>
  <div class='span6 sub-header'>
    <h2>
      View Timetable
    </h2>
  </div>
  <div class='span6 sub-header'>
    <div class='header-actions'>
      <%= back_button(@year.no, year_path(@year)) %>
    </div>
  </div>
</div>

<hr>

<h4>
  By Term
</h4>

<ul class='nav nav-pills nav-stacked'>
  <% @terms.each do |t| %>
    <li>
      <%= link_to "Term #{t.no}", timetable_slots_year_term_path(@year, t) %>
    </li>
  <% end %>
</ul>

<hr>

<h4>
  By Room
</h4>

<ul class='nav nav-pills nav-stacked'>
  <% @rooms.each do |r| %>
    <li>
      <%= link_to "Room #{r.no}", timetable_slots_year_room_path(@year, r) %>
    </li>
  <% end %>
</ul>
