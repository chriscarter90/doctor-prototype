<h2><%= @year.no %></h2>

<h3><%= link_to "Lecture Courses", year_lecture_courses_path(@year) %></h3>
<h3><%= link_to "Degree Classes", year_degree_classes_path(@year) %></h3>
<h3><%= link_to "Staff Members", year_staff_members_path(@year) %></h3>
<h3><%= link_to "Rooms", year_rooms_path(@year) %></h3>

<ul>
<% @terms.each do |t| %>
  <li>
    <%= "Term #{t.no}: #{t.weeks.size} weeks starting #{start_date(t)}" %>
  </li>
<% end %>
</ul>

<%= link_to "Edit", edit_year_path(@year), :class => "btn btn-primary" %>
<%= link_to "Select Course Weeks", year_course_weeks_path(@year), :class => "btn btn-primary" %>
<%= link_to "Select Clashes", year_clashes_path(@year), :class => "btn btn-primary" %>
