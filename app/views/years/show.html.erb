<div class="row" id="inner-header">
  <div class='span6 sub-header'>
    <h2><%= @year.no %></h2>
  </div>
  <div class='span6 sub-header'>
    <div class="header-actions">
      <%= link_to "Edit Year", edit_year_path(@year), :class => "btn btn-primary" %>
      <%= link_to "Select Course Weeks", year_course_weeks_path(@year), :class => "btn btn-primary" %>
      <%= link_to "Select Clashes", year_clashes_path(@year), :class => "btn btn-primary" %>
      <%= link_to years_path, :class => "btn btn-danger" do %>
        <i class='icon-chevron-left'></i> Back to years
      <% end %>
    </div>
  </div>
</div>

<hr>

<div class='row inner-container'>
  <div class="span6 sub-container">
    <ul class='nav nav-pills nav-stacked models'>
      <li>
        <%= link_to "Lecture Courses", year_lecture_courses_path(@year) %>
      </li>
      <li>
        <%= link_to "Degree Classes", year_degree_classes_path(@year) %>
      </li>
      <li>
        <%= link_to "Staff Members", year_staff_members_path(@year) %>
      </li>
      <li>
        <%= link_to "Rooms", year_rooms_path(@year) %>
      </li>
    </ul>
  </div>

  <div class="span6 sub-container">
    <h4>Term Dates</h4>
    <ul>
      <% @terms.each do |t| %>
        <li>
          <%= "Term #{t.no}: #{t.weeks.size} weeks starting #{start_date(t)}" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
