<% if flash[:notice] -%>
  <div class="alert alert-success">
    <%= flash[:notice] %>
  </div>
<% end -%>
<% if flash[:warning] -%>
  <div class="alert alert-warning">
    <%= flash[:warning] %>
  </div>
<% end -%>
<% if flash[:alert] -%>
  <div class="alert alert-error">
    <%= flash[:alert] %>
  </div>
<% end -%>
