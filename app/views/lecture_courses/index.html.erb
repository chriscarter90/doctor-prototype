<div class="row" id='inner-header'>
  <div class='span6 sub-header'>
    <h2>
      Lecture Courses
    </h2>
  </div>
  <div class='span6 sub-header'>
    <div class='header-actions'>
      <%= link_to year_path(@year), :class => "btn btn-danger" do %>
        <I class='icon-chevron-left'></i> Back to <%= @year.no %>
      <% end %>
    </div>
  </div>
</div>

<hr>

<% if @courses.empty? %>
  <div class="alert alert-block">
    No courses to show.
  </div>
<% else %>
  <ul class='nav nav-pills nav-stacked'>
    <% @courses.each do |c| %>
      <li>
        <%= link_to "#{c.code} - #{c.title}", year_lecture_course_path(@year, c) %>
      </li>
    <% end %>
  </ul>
<% end %>
