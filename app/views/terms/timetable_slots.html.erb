<h3>
  Timetable for Term <%= @term.no %>
</h3>

<table class="table table-bordered">
  <tr>
    <th></th>
    <% Day.all.each do |d| %>
      <th>
        <%= d.name %>
      </th>
    <% end %>
  </tr>

  <% 1.upto(9) do |time| %>
    <tr>
      <td>
        <%= time %>
      </td>
      <% Day.all.each do |d| %>
        <td>
          <% if @slots[@time_slots.where(:day_id => d.id, :start_hour => time).first].present? %>
            <% @slots[@time_slots.where(:day_id => d.id, :start_hour => time).first].each_pair do |course, course_allocs| %>
              <%= course.code %> (<%= get_week_ranges(course_allocs.map(&:week_id)) %>)
            <% end %>
          <% end %>
        </td>
      <% end %>
    </tr>
  <% end %>
</table>
